<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Blog</title>
  <link rel="stylesheet" href="/styles/main.css">
  <!-- <script src="https://unpkg.com/axios/dist/axios.min.js"></script> -->
</head>

<body>
  <div class="container">
    <h1>My Blog</h1>
    <a id="newPostBtn" href="/new">New Post</a>
    <ul id="postsList">
      <% posts.forEach((post) => { %>
        <li>
          <h2>
            <%=post.title%>
          </h2>
          <small>
            <% if(post.updated_at) { %>
                <%= new Date(post.updated_at).toLocaleString() %>
            <% } else { %>
                  <%=new Date(post.created_at).toLocaleString() %> 
              <% } %>
          </small>
          <p>
            <%=post.content%>
          </p>
          <small>By: <%=post.author%> </small>
          <div class="actions">
             <a class="edit" href="/edit/<%= post.id %>">Edit</a>
             <a class="partial-edit" href="/partial-edit/<%= post.id %>">Partial Edit</a>
             <form action="/api/posts/delete/<%= post.id %>" method="post" style="display:inline;">
                 <button class="delete" type="submit">Delete</button>
             </form>
          </div>
        </li>
        <% }); %>
    </ul>
  </div>

</body>

</html>